<%- include ("partials/header") %>
<div class="container">
    <div class="row">
<h1 style="text-align: center;">Create New Note</h1>
<div style="width: 30%; margin: 25px auto;">
<form action="/campgrounds" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" placeholder="Title" name="name">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" maxlength="1000" placeholder="Description" name="description">
        </div>
        <div class="form-group">
            <p name="time">Date/Time: <span id="datetime"></span></p>
        </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
    </div>
    
</form>
<a href="/campgrounds">Go back</a>
</div>
</div>
</div>
<script>
    const time = new Date();
    document.getElementById("datetime").innerHTML = time.toLocaleString();
</script>
<%- include ("partials/footer") %>